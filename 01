#include <stdio.h>
#include <stdlib.h>

int main() {
    int a, b, c, d;

    printf("input the second: \n");
    scanf("%d", &a);


    b = a / 3600;    
    a %= 3600;            
    c = a / 60;     
    d = a % 60;     

    printf("The time for %d second is %02d : %02d : %02d\n", a, b, c, d);

    return 0;
}
